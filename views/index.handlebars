<h1>Devoured!</h1>

<h2>Burgers Delicious!</h2>

<ul>
    {{#each burgers}}
    {{#unless this.devoured}}
    <div class="burger">

        <h3 class="name">{{burger_name}}</h3>

        <div class="action">
            {{! If Uneaten add an eat button}}
            <button class="change-devoured" data-id="{{id}}">
                Eat this burger!
            </button>

            <button class="delete" data-id="{{id}}">
                <i class="material-icons"></i>
            </button>
        </div>
    {{/unless}}
        {{/each}}


        {{! If Eaten, option to review}}
            {{#each burgers}}

        {{#if this.devoured}}
        <div class="review" data-id="{{id}}">
            <h4>Rate your burger</h4>
            <div class="rate">
                {{! five star review is empty}}
                <i class="material-icons" data-value="1"></i>
                <i class="material-icons" data-value="2"></i>
                <i class="material-icons" data-value="3"></i>
                <i class="material-icons" data-value="4"></i>
                <i class="material-icons" data-value="5"></i>
            </div>
            {{!-- <form>
				<label for="burger-review">
					<input id="burger-review" type="textarea" name="review">
					<button>submit</button>
				</label>
			</form> --}}
        </div>
        {{/if}}
    </div>
    {{/each}}
</ul>

<h2>Burgers that are devoured!</h2>

<ul>
    {{#each burgers}}
    {{#if devoured}}
    {{> burgers/burger-block}}
    {{/if}}
    {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="name">
    </div>

    <div class="form-group">
        <label for="devoured">Devoured?</label><br>
        <input type="radio" name="devoured" value="1" checked> Devoured!<br>
        <input type="radio" name="devoured" value="0"> Hungry
    </div>

    <button type="submit">Add Burger</button>
</form>